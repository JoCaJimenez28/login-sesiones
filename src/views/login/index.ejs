<%- include('../layouts/main.ejs') %>
<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">
    
    <h1 class="text-3x1 font-bold text-center">LOGIN</h1>
    <form action="" method="POST" class="mt-4"> 
        
        <input type="text" name="correo" placeholder="Correo" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
        bg-gray-200 focus:bg-white" required>
        <input type="password" name="password" placeholder="Contraseña" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
        bg-gray-200 focus:bg-white" required>
    
        <button type="submit" class="rounded-md bg-blue-500 w-full text-lg text-white
        font-semibold p-2 my-3 hover:bg-blue-600 focus:bg-blue-700">Iniciar Sesión</button>
        
        <% const error = ""
        if(error != ""){ %>
                <p><% error %></p>
        <% } %>
    </form>
</div>
<%- include('../layouts/end.ejs') %>