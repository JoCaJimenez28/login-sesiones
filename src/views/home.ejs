
<%- include('layouts/main.ejs') %>
<body > <!-- Funciones llamadas despues de cargar la pagina --> 
    <div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">
        <div>           
            <h1 class="text-3x1 font-bold text-center">CAR DEALERSHIP</h1>

            <form id="insertarVehiculo" class="mt-4" method="POST">
                Placa: <input type="text" name="placa" id="mi_placa" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
                bg-gray-200 focus:bg-white"><br><br>
                Tipo de vehículo:<input type="text" name="tipo" id="mi_tipo" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
                bg-gray-200 focus:bg-white"><br><br>
                Marca:<input type="text" name="marca" id="mi_marca" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
                bg-gray-200 focus:bg-white"><br><br>
                Modelo:<input type="text" name="modelo" id="mi_modelo" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
                bg-gray-200 focus:bg-white"><br><br>
                Versión del modelo:<input type="number" name="versionModelo" id="mi_version" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
                bg-gray-200 focus:bg-white"><br><br>
                Número de Serie:<input type="number" name="numeroSerie" id="mi_nserie" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
                bg-gray-200 focus:bg-white"><br><br>  
                <!--El boton es submit para que se haga la validacion de los campos del lado del cliente-->
                <div >
                    <button type="submit" class="rounded-md bg-blue-500 w-full text-lg text-white
                    font-semibold p-2 my-3 hover:bg-blue-600 focus:bg-blue-700"> Insertar</button>
                    <a href="/consulta" class="rounded-md bg-blue-500 w-full text-lg text-white
                    font-semibold p-2 my-3 hover:bg-blue-600 focus:bg-blue-700">Consulta</a>     
                </div>
            </form>
        </div>

        
    </div>
<%- include('layouts/end.ejs') %>
